<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    >

    <com.cc.testrepo.tabhost.view.BadgeViewGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:icon_gravity="left"
        app:icon_offset_x="0dp"
        app:icon_offset_y="0dp"
        app:icon_text="1"
        app:icon_text_size="10sp"
        app:icon_text_color="@android:color/white"
        app:icon_background="@drawable/badge_icon_bg"
        app:icon_visible="true"
        app:icon_dot_size="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="点评评价"
            android:background="#abcdef"
            />

    </com.cc.testrepo.tabhost.view.BadgeViewGroup>

</FrameLayout>