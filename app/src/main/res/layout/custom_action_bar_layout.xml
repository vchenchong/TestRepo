<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >

    <com.cc.testrepo.tabhost.view.BadgeViewGroup
        android:id="@+id/custom_action_bar_left_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:text="Left"
            android:background="@drawable/custom_action_bar_left_btn_bg"
            />
    </com.cc.testrepo.tabhost.view.BadgeViewGroup>

    <com.cc.testrepo.tabhost.view.BadgeViewGroup
        android:id="@+id/custom_action_bar_right_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:text="Right"
            android:background="@drawable/custom_action_bar_right_btn_bg"
            />
    </com.cc.testrepo.tabhost.view.BadgeViewGroup>

</LinearLayout>