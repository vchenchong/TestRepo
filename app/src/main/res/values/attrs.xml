<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="OverScrollView">
        <attr name="overScrollDistance" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ExpandGridLayout">
        <attr name="visibleLineCount" format="integer"/>
        <attr name="columnCount" format="integer"/>
    </declare-styleable>


    <declare-styleable name="EqualDivisionGridLayout">
        <attr name="column_count" format="integer"/>
        <attr name="divider_height" format="dimension"/>
        <attr name="space_mode">
            <enum name="WITH_BOUND" value="0"/>
            <enum name="WITHOUT_BOUND" value="1"/>
        </attr>
        <attr name="gravity">
            <flag name="left" value="0x01"/>
            <flag name="center_horizontal" value="0x02"/>
            <flag name="right" value="0x04"/>
            <flag name="top" value="0x10"/>
            <flag name="center_vertical" value="0x20"/>
            <flag name="bottom" value="0x40"/>
            <flag name="center" value="0x22"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="PhoneView">
        <attr name="formatter">
            <enum name="DIVIDER" value="0"/>
        </attr>
        <attr name="formatter_divider" format="string"/>
    </declare-styleable>

    <declare-styleable name="BadgeViewGroup">
        <attr name="icon_gravity">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>
        <attr name="icon_background" format="reference"/>
        <attr name="icon_text" format="string"/>
        <attr name="icon_text_color" format="color"/>
        <attr name="icon_text_size" format="dimension"/>
        <attr name="icon_visible" format="boolean"/>
        <attr name="icon_offset_x" format="dimension"/>
        <attr name="icon_offset_y" format="dimension"/>
        <attr name="icon_dot_size" format="dimension"/>
    </declare-styleable>

</resources>